{
  "name": "text-editor",
  "version": "1.0.0",
  "description": "Text Editor",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "jest",
    "dev": "npm run _devserver",
    "dev:auto-reload": "npm run _devserver:auto-reload",
    "_devserver": "cross-env NODE_ENV=dev webpack-dev-server --progress --open --config webpack.dev.js",
    "_devserver:auto-reload": "cross-env NODE_ENV=dev-auto-reload webpack-dev-server --progress --open --config webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --config webpack.prod.js && cp -R ./src/webpage/static ./dist/ && cp ./src/webpage/_redirects ./dist/",
    "dist:server": "http-server ./dist -o"
  },
  "author": "David Komer",
  "devDependencies": {
    "@types/chai": "4.0.10",
    "@types/draft-js": "0.10.19",
    "@types/node": "8.5.2",
    "@types/react": "16.0.31",
    "@types/react-dom": "16.0.3",
    "awesome-typescript-loader": "3.4.1",
    "chai": "4.1.2",
    "clean-webpack-plugin": "0.1.17",
    "cross-env": "5.1.3",
    "css-loader": "0.28.7",
    "draft-js": "0.10.4",
    "gl-matrix": "2.4.0",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "http-server": "0.10.0",
    "npm-run-all": "4.1.2",
    "null-loader": "0.1.1",
    "prop-types": "15.6.0",
    "ramda": "0.25.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "sanctuary": "0.14.1",
    "source-map-loader": "0.2.3",
    "style-loader": "0.19.1",
    "ts-jest": "22.0.0",
    "typescript": "2.6.2",
    "uglify-js": "3.3.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.9.7",
    "webpack-merge": "4.1.1"
  }
}
